@model IEnumerable<MyProjectTravel.Models.Itinerary>

@{
    ViewData["Title"] = "GetAllItinerario";
}

<h1>Itinerario</h1>

<p>
    <a asp-controller="Itinerario" asp-action="AddItinerario" class="btn btn-primary">Ingresar un nuevo Itinerario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.origin.city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.destination.city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.worker.user.userName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bus.placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.startDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.arrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.origin.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.destination.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.worker.user.userName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.bus.placa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.startDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.arrivalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-controller="Itinerario" asp-action="UpdateItinerario" asp-route-id="@item.idItn" class="btn btn-success">Edit</a>
                        <a asp-controller="Itinerario" asp-action="GetItinerarioById" asp-route-id="@item.idItn" class="btn btn-warning">Detalles</a>
                        <a asp-controller="Itinerario" asp-action="GetItinerarioById" asp-route-id="@item.idItn" class="btn btn-danger">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
