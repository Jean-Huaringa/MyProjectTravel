@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@{
    bool isAuthenticated = User.Identity.IsAuthenticated;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyProjectTravel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyProjectTravel.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/e168fd3e89.js" crossorigin="anonymous"></script>
</head>
<body>
    <header class="">
        <nav class="navbar navbar-expand-lg bg-body-tertiary navbar-light">
            <div class="container">
                <a class="navbar-brand me-auto" asp-area="" asp-controller="Pasajes" asp-action="SearchForPassage">My_Proyect_Travel</a>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Offcanvas</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-center flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Home</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link" asp-controller="Boleto" asp-action="GetAllBoleto">Boletos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Bus" asp-action="GetAllBus">Bus</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Estacion" asp-action="GetAllEstacion">Estaciones</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Itinerario" asp-action="GetAllItinerario">Itinerarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuario" asp-action="GetAllUsuario">Usuarios</a>
                            </li>
                        </ul>
                    </div>
                </div>
                @if (isAuthenticated)
                {
                    <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                        <ul class="navbar-nav justify-content-center flex-grow-1 pe-3">
                            <li class="nav-item dropdown">
                                <a class="login-button" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Bienvenido
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="GetUser">
                                            Informacion
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="UpdatePassword">
                                            Cambia contraseña
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="UpdateUser">
                                            Editar Cuenta
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <button type="submit" class="dropdown-item">Cerrar sesión</button>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </form>
                }
                else
                {
                    <a class="login-button" asp-controller="Account" asp-action="Login">Iniciar sesión</a>
                }
                <button class="navbar-toggler pe-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
                        aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MyProjectTravel - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
