@model MyProjectTravel.Models.Acount.PasswordUpdateRequest

@{
    ViewData["Title"] = "Actualizar Contraseña";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center text-primary">Actualizar Cuenta</h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    <form method="post" asp-action="UpdatePassword">
                        <input type="hidden" name="_method" value="PUT" />

                        <div class="mb-3">
                            <label for="oldPassword" class="control-label">Contraseña actual</label>
                            <input type="password" class="form-control" id="oldPassword" name="oldPassword" required />
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="control-label">Nueva contraseña</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Actualizar</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <small>¿Ya tienes cuenta? <a asp-controller="Account" asp-action="Login">Ingresar</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
