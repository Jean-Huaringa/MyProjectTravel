@model MyProjectTravel.Models.Station

@{
    ViewData["Title"] = "AddEstacion";
}

<h1>Estación</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="city" class="control-label"></label>
                <input asp-for="city" class="form-control" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="street" class="control-label"></label>
                <input asp-for="street" class="form-control" />
                <span asp-validation-for="street" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="pseudonym" class="control-label"></label>
                <input asp-for="pseudonym" class="form-control" />
                <span asp-validation-for="pseudonym" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
