@model MyProjectTravel.Models.Station

@{
    ViewData["Title"] = "GetEstacionById";
}

<h1>Estación</h1>

<div>
    <h4>Estación</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.city)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.city)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.pseudonym)
        </dt>
